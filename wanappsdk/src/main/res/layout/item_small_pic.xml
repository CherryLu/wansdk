<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_pic"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/gray_text"
            android:id="@+id/maintitle"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/item_pic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题"/>

        <TextView
            android:textSize="14sp"
            android:layout_below="@+id/maintitle"
            android:textColor="@color/light_grey_text"
            android:layout_marginTop="5dp"
            android:id="@+id/subtitle"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/item_pic"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题两行标题"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_pic"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:id="@+id/last_order"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余10份"/>

            <TextView
                android:padding="2dp"
                android:background="@drawable/grey_bac"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:id="@+id/app_lable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:padding="2dp"
                android:background="@drawable/grey_bac"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:id="@+id/app_lable2"
                android:layout_toRightOf="@id/app_lable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>



        </LinearLayout>


        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/color_light_red"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:id="@+id/shouyi"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5钻石"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_gray"/>

</LinearLayout>
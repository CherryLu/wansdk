<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbars="none"
        android:background="@drawable/conner_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/phone_number"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"
                        android:text="请输入您的手机号"
                        android:lines="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />


                    <EditText
                        android:paddingLeft="10dp"
                        android:background="@null"
                        android:textSize="10sp"
                        android:hint="请输入您的手机号"
                        android:inputType="textPersonName"
                        android:id="@+id/phone_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/name"
                        android:layout_gravity="center_vertical"
                        android:lines="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:background="@null"
                        android:paddingLeft="10sp"
                        android:textSize="10sp"
                        android:hint="请输入您的姓名"
                        android:inputType="text"
                        android:id="@+id/name_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_width="200dp"
                        android:layout_height="40dp" />
                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/id_card"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:paddingLeft="10dp"
                        android:hint="请输入您的身份证号"
                        android:background="@null"
                        android:textSize="10sp"
                        android:id="@+id/card_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/new_account"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:paddingLeft="10dp"
                        android:background="@null"
                        android:textSize="10sp"
                        android:hint="请输入您的账号"
                        android:id="@+id/account_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/psw"
                        android:layout_gravity="center_vertical"
                        android:text="请输入您的密码"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <EditText
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:textSize="10sp"
                        android:hint="请输入您的密码"
                        android:id="@+id/psw_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/yaoqingma"
                        android:layout_gravity="center_vertical"
                        android:text="请输入传邀请码"
                        android:layout_width="23dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:paddingLeft="12dp"
                        android:background="@null"
                        android:textSize="10sp"
                        android:hint="请输入传邀请码"
                        android:id="@+id/submit_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/book_card"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <EditText
                        android:paddingLeft="10sp"
                        android:background="@null"
                        android:textSize="10sp"
                        android:hint="请输入订单号"
                        android:id="@+id/policyId_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>
                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/layout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/pay"
                        android:layout_gravity="center_vertical"
                        android:text="请输入您的微信或支付宝账号"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:paddingLeft="10dp"
                        android:background="@null"
                        android:textSize="10sp"
                        android:hint="请输入您的微信或支付宝账号"
                        android:id="@+id/paycount_input"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@drawable/edit_conner"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>

                <View
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/submit_btn"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_origin"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="立即提交"
                    android:layout_width="200dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/close_image"
                android:layout_marginLeft="210dp"
                android:src="@mipmap/dialog_close"
                android:layout_width="25dp"
                android:layout_height="30dp" />
        </RelativeLayout>


    </ScrollView>




</LinearLayout>
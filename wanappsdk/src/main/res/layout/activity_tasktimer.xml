<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_area"
        layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_below="@+id/title_area"
        android:id="@+id/main_area"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/app_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/defaluthead"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_text"
            android:textSize="18sp"
            android:id="@+id/app_name"
            android:layout_toRightOf="@id/app_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/app_name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/light_grey_text"
            android:textSize="14sp"
            android:id="@+id/app_size"
            android:layout_toRightOf="@id/app_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>



        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/app_lable1"
            android:id="@+id/getmoney"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="#FA5539"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text=""/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/app_lable2"
            android:padding="2dp"
            android:background="@drawable/grey_bac"
            android:layout_marginLeft="10dp"
            android:textColor="#008001"
            android:textSize="10sp"
            android:id="@+id/app_lable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:background="@drawable/grey_bac"
            android:layout_marginLeft="10dp"
            android:textColor="#008001"
            android:textSize="10sp"
            android:id="@+id/app_lable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/qc_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_area"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/qc_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:layout_gravity="center_horizontal"
            android:background="@color/origin_color"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务说明"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/round_ori"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:text="任务说明任务说明任务说明任务说明任务说明任务说明任务说明任务说明任务说明"
                android:id="@+id/shuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/origin_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注意事项"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/round_ori"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:text="任务说明任务说明任务说明任务说明任务说明任务说明任务说明任务说明任务说明"
                android:id="@+id/notices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image"
            android:id="@+id/images"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </LinearLayout>

    <Button
        android:visibility="gone"
        android:lines="2"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/startapp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/float_buttom"
        android:text="打开APP"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/task_start"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/origin_color"
        android:text="开始体验"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
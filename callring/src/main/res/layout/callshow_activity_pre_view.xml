<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_blue">
    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"></View>
        <com.wan.callring.ui.widget.VidewView2
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />


    <ProgressBar
        android:id="@+id/video_progressbar"
        style="@android:style/Widget.Holo.ProgressBar.Small"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/ll_video_pb"/>

        <RelativeLayout
            android:id="@+id/rl_call_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp">
            <TextView
                android:id="@+id/tv_jingyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="静音"
                android:layout_marginLeft="56dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/iv_phone_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_callshow_phone_answser"
                android:layout_centerInParent="true"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/tv_mianti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="免提"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginRight="56dp"
                android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_phone_refuse_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_callshow_phone_answser"
                android:background="@color/transparent"/>
            <ImageView
                android:id="@+id/iv_phone_center_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_callshow_answer_n"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13800138000"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在拨号..."
            android:layout_centerHorizontal="true"
            android:textColor="#ebebeb"
            android:textSize="14sp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川成都"
            android:textColor="#ebebeb"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_opeartion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="150dp">
        <TextView
            android:id="@+id/setting_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_setting_counts"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/tv_preivew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨号预览"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_prview"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_share_2"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawableTop="@mipmap/icon_setting_2"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nextlayout"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goback"
            android:src="@mipmap/back_translation"
            android:layout_width="30dp"
            android:layout_height="25dp" />
        <Button
            android:id="@+id/nextstep"
            android:layout_alignParentRight="true"
            android:background="@drawable/callshow_red_conner"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_video_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/tv_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/bg_guid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_guid_preview"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="A"
        android:textColor="#999999"
        android:textSize="15sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_callphone_addressbook_item">

        <ImageView
            android:id="@+id/imageview_head"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@mipmap/icon_phone_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"/>
        <TextView
            android:text=""
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageview_head"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="15sp" />
        <TextView
            android:text=""
            android:layout_toLeftOf="@+id/selected"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_marginRight="30dp"
            android:textSize="12sp" />

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/unselected"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

</LinearLayout>